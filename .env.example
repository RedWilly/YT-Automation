# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Telegram Access Control (optional)
# ALLOWED_USER_IDS and ALLOWED_CHAT_IDS are comma-separated numeric IDs.
# Leave both empty to allow everyone.
# Examples:
# ALLOWED_USER_IDS=123456789, 987654321
# ALLOWED_CHAT_IDS=-1001234567890, -1005556667777
ALLOWED_USER_IDS=
ALLOWED_CHAT_IDS=

# AssemblyAI Configuration (using official SDK)
ASSEMBLYAI_API_KEY=a91397..your_key_here

# DeepSeek LLM Configuration
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Debug Mode (true = detailed logs, false = lite logs)
DEBUG=false

# AI Image Generation Configuration
# USE_AI_IMAGE: Set to 'true' to use AI-generated images (Cloudflare Worker)
#               Set to 'false' to use web search (DuckDuckGo) for images
# Note: AI images are generated based on transcript content with vintage oil painting style
#       You can update the style in src/constants.ts (AI_IMAGE_STYLE constant)
USE_AI_IMAGE=false
WORKER_API_URL=https://worker_anme.username.workers.dev/
WORKER_API_KEY=1234.....

# Video Generation Configuration
# PAN_EFFECT: Set to 'true' to enable subtle vertical pan effect on images
#             Set to 'false' to disable pan effect (static images)
# Note: Pan effect uses 10-20% of available vertical headroom for smooth, natural motion
#       Works best with 4:3 images (1472×1104) in 16:9 video (1920×1080)
PAN_EFFECT=false

# Caption Configuration
# CAPTIONS_ENABLED: Set to 'true' to enable word-by-word highlighted captions
#                   Set to 'false' to disable captions (video only)
# Note: Captions use karaoke-style highlighting with 3-6 words displayed at a time
#       Each word is highlighted as it's spoken based on AssemblyAI timestamps
CAPTIONS_ENABLED=true

# MinIO Object Storage Configuration
# Used to upload finished videos to MinIO for downstream processing (e.g., YouTube upload via n8n)
# MINIO_ENABLED: Set to 'true' to enable automatic upload to MinIO after video generation
#                Set to 'false' to skip MinIO upload (videos stay local only)
MINIO_ENABLED=false
MINIO_ENDPOINT=https://minio.rooni.site
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET=finished-videos
# MINIO_REGION is optional, defaults to 'us-east-1' if not specified
MINIO_REGION=us-east-1

