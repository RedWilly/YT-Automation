###############################################################################
#                                 CORE SETTINGS                               #
###############################################################################

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Debug Mode (true = detailed logs, false = lite logs)
DEBUG=false

# Telegram Access Control (optional)
# ALLOWED_USER_IDS and ALLOWED_CHAT_IDS are comma-separated numeric IDs.
# Leave both empty to allow everyone.
ALLOWED_USER_IDS=
ALLOWED_CHAT_IDS=


###############################################################################
#                           AI PROVIDER CONFIGURATION                         #
###############################################################################

# Select the AI Provider to use for text generation
# Options: "deepseek" (default) or "kimi"
AI_PROVIDER=deepseek

# --------------------------
# DeepSeek Configuration
# --------------------------
# Required if AI_PROVIDER=deepseek
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# --------------------------
# Kimi Configuration
# --------------------------
# Required if AI_PROVIDER=kimi
KIMI_API_KEY=your_kimi_api_key_here

# --------------------------
# General LLM Settings
# --------------------------
# Max number of transcript segments to send to LLM per batch
# Default: 60 (Adjust based on context window limits)
LLM_SEGMENTS_PER_BATCH=60


###############################################################################
#                           TRANSCRIPTION SERVICE                             #
###############################################################################

# AssemblyAI Configuration (using official SDK)
ASSEMBLYAI_API_KEY=your_assemblyai_key_here


###############################################################################
#                           MEDIA GENERATION                                  #
###############################################################################

# --------------------------
# Image Generation
# --------------------------
# USE_AI_IMAGE: Set to 'true' to use AI-generated images
#               Set to 'false' to use web search (DuckDuckGo) for images
USE_AI_IMAGE=false

# AI_IMAGE_MODEL: Select which AI image provider to use
# Options: "cloudflare" (Cloudflare Worker) or "togetherai" (Together AI FLUX.1-schnell)
# Note: Together AI free tier has 6 img/min rate limit - handled automatically
AI_IMAGE_MODEL=cloudflare

# AI Image Style (used when USE_AI_IMAGE=true)
AI_IMAGE_STYLE= classical oil painting, smooth blended transitions, photorealistic detail, museum quality finish, rich varnished appearance, balanced natural lighting, muted sophisticated color palette, highly refined and polished, masterful technique.

# Cloudflare Worker Configuration (Required if AI_IMAGE_MODEL=cloudflare)
WORKER_API_URL=https://worker_name.username.workers.dev/
WORKER_API_KEY=your_worker_api_key_here

# Together AI Configuration (Required if AI_IMAGE_MODEL=togetherai)
# Uses FLUX.1-schnell-Free model for image generation
TOGETHER_API_KEY=your_together_api_key_here

# --------------------------
# Video Processing
# --------------------------
# PAN_EFFECT: Set to 'true' to enable subtle vertical pan effect on images
#             Set to 'false' to disable pan effect (static images)
# Note: Pan effect uses 10-20% of available vertical headroom for smooth, natural motion
#       Works best with 4:3 images (1472×1104) in 16:9 video (1920×1080)
PAN_EFFECT=true

# Caption Configuration
# CAPTIONS_ENABLED: Set to 'true' to enable word-by-word highlighted captions
#                   Set to 'false' to disable captions (video only)
# Note: Captions use karaoke-style highlighting with 3-6 words displayed at a time
#       Each word is highlighted as it's spoken based on AssemblyAI timestamps
CAPTIONS_ENABLED=true


###############################################################################
#                           STORAGE CONFIGURATION                             #
###############################################################################

# MinIO Object Storage Configuration
# Used to upload finished videos to MinIO for downstream processing (e.g., YouTube upload via n8n)
# MINIO_ENABLED: Set to 'true' to enable automatic upload to MinIO after video generation
#                Set to 'false' to skip MinIO upload (videos stay local only)
MINIO_ENABLED=false
MINIO_ENDPOINT=https://minio.rooni.site
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_minio_secret_key_here
MINIO_BUCKET=finished-videos
MINIO_REGION=us-east-1
