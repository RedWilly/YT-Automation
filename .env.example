# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# AssemblyAI Configuration (using official SDK)
ASSEMBLYAI_API_KEY=a91397..your_key_here

# DeepSeek LLM Configuration
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1

# Debug Mode (true = detailed logs, false = lite logs)
DEBUG=false

# AI Image Generation Configuration
# USE_AI_IMAGE: Set to 'true' to use AI-generated images (Pollinations.ai)
#               Set to 'false' to use web search (DuckDuckGo) for images
# Note: AI images are generated based on transcript content with vintage oil painting style ( you can update the style src/constants.ts)
USE_AI_IMAGE=false
POLLINATIONS_API_KEY=your_pollinations_api_key_here

# Video Generation Configuration
# INCLUDE_DISCLAIMER: Set to 'true' to prepend disclaimer video (assets/start.mov) to all generated videos
#                     Set to 'false' to generate videos without disclaimer (default behavior)
#                     Note: Disclaimer video plays first, then the AI-generated content follows
# This can be an intro or anything you want to add to the video before the content
INCLUDE_DISCLAIMER=false

# YouTube API Configuration
# Get your credentials from: https://console.cloud.google.com/apis/credentials
# YOUTUBE_AUTO_POST: Set to 'true' to automatically upload videos to YouTube after generation
#                    Set to 'false' to only generate videos locally without uploading
#                    Note: Auto-cleanup only happens after successful upload (when true)
# as of now with the youtube v3 api - i couldnt get the upload to work
#keeps geeting authorised client - ill look into that later
YOUTUBE_AUTO_POST=false
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Default Channel (Mossad)
YOUTUBE_DEFAULT_CHANNEL=mossad
YOUTUBE_MOSSAD_ACCESS_TOKEN=your_mossad_access_token_here
YOUTUBE_MOSSAD_REFRESH_TOKEN=your_mossad_refresh_token_here
YOUTUBE_MOSSAD_CHANNEL_ID=your_channel_id_here (UCZd.....Eg)

# Blind Spot Channel
YOUTUBE_BLINDSPOT_ACCESS_TOKEN=your_blindspot_access_token_here
YOUTUBE_BLINDSPOT_REFRESH_TOKEN=your_blindspot_refresh_token_here
YOUTUBE_BLINDSPOT_CHANNEL_ID=your_channel_id_here (UCZd.....Eg)

